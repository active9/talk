#!/usr/bin/env node

var talk = require("../lib/talk.js");

console.log("TEST", process.argv[process.argv.length-1]);
if(process.argv[process.argv.length-1].match('talk')) {
	console.log("Try: talk \"Hello There\"");
	process.exit(1);
}
talk(process.argv[process.argv.length-1], function() {
	process.exit(1);
});